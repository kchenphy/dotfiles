# Bind prefix to Ctrl-]
escape ^]^]

# Turn off welcome message
startup_message off

# Use 256 color
term screen-256color

# Status bar
hardstatus alwayslastline "%{gk} %S %{.kW} %-w%{+bs .kR}%n %f%t%{-}%+w %= %{gk} %{wk}%m/%d/%Y %c"

# Turn on alternative screen
altscreen on

# Bind key
bind R source "~/.screenrc"

# Start the shell as a login shell, so that .bashrc will be effective
shell -$SHELL

# Large scroll back
defscrollback 100000

# Scroll with mouse
termcapinfo xterm* ti@:te@